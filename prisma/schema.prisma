// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model List {
  id       String  @id @default(uuid()) @map("_id")
  name     String  @unique
  position Int?
  color    String? @default("#000000")
  tasks    Task[]
}

model Task {
  id          String @id @default(uuid()) @map("_id")
  name        String @unique
  description String
  degree      Int
  list        String
  listId      List   @relation(fields: [list], references: [name])
}
